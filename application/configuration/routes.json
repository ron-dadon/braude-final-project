{
    "base": "/iacs/public_html",
    "default": {
        "controller": "main",
        "function": "error"
    },
    "routes": [
        {
            "pattern": "/",
            "controller": "main",
            "function": "index"
        },
        {
            "pattern": "/login",
            "controller": "main",
            "function": "login"
        },
        {
            "pattern": "/forgot-password",
            "controller": "main",
            "function": "forgot_password"
        }
    ]
}