{
    "default": {
        "controller": "main",
        "function": "error"
    },
    "routes": [
        {
            "pattern": "/",
            "controller": "main",
            "function": "index"
        },
        {
            "pattern": "/error",
            "controller": "main",
            "function": "error"
        },
        {
            "pattern": "/search",
            "controller": "main",
            "function": "search"
        },
        {
            "pattern": "/clients",
            "controller": "clients",
            "function": "index"
        },
        {
            "pattern": "/products",
            "controller": "products",
            "function": "index"
        },
        {
            "pattern": "/quotes",
            "controller": "quotes",
            "function": "index"
        },
        {
            "pattern": "/invoices",
            "controller": "invoices",
            "function": "index"
        },
        {
            "pattern": "/reports",
            "controller": "reports",
            "function": "index"
        },
        {
            "pattern": "/management",
            "controller": "management",
            "function": "index"
        },
        {
            "pattern": "/login",
            "controller": "main",
            "function": "login"
        },
        {
            "pattern": "/logout",
            "controller": "main",
            "function": "logout"
        },
        {
            "pattern": "/clients/delete/(id)",
            "controller": "clients",
            "function": "delete_client"
        },
        {
            "pattern": "/clients/edit/(id)",
            "controller": "clients",
            "function": "edit_client"
        },
        {
            "pattern": "/clients/show/(id)",
            "controller": "clients",
            "function": "show_client"
        }
    ]
}